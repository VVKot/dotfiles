let mapleader = ' '

set gdefault
set visualbell
set noerrorbells
set relativenumber
set number
set incsearch hlsearch
set ignorecase smartcase
set clipboard=unnamed
set scrolloff=5
set sidescrolloff=1
set ttimeoutlen=0
set surround
set commentary
set ideajoin

nnoremap Y y$
nnoremap Q @q

nnoremap [n :<C-u>action VcsShowPrevChangeMarker<CR>
